<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/styles.css" />
    <script src="https://cdn.tailwindcss.com"></script>

    <title>Create User</title>
  </head>
  <body>
    <div>
      <h1>user id:<%=userId%></h1>
      <div class="container mx-auto p-4">
        <% if (movies.length > 0) { %>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <% movies.forEach(function(val) { %>
              <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <div class="h-800 w-full">
                  <img class="w-full h-80 object-cover" src="<%= val.image %>" alt="<%= val.title %>">
                </div>
                <div class="p-4">
                  <h1 class="text-xl font-semibold mb-2 text-green-500"><%= val.title %></h1>
                  <a href="/moviedisplay/<%= val._id %>" class="inline-block px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-700">Book Now</a>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <h1 class="text-white text-center">NO movies yet</h1>
        <% } %>
      </div>
      
    </div>
  </body>
</html>
